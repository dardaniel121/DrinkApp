<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dardaniel.drinkapp.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_compositionDrinkFragment"
            app:destination="@id/compositionDrinkFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailDrinkFragment"
        android:name="com.dardaniel.drinkapp.ui.detail.DetailDrinkFragment"
        android:label="fragment_detail_drink"
        tools:layout="@layout/fragment_detail_drink" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/compositionDrinkFragment"
        android:name="com.dardaniel.drinkapp.ui.composition.CompositionDrinkFragment"
        android:label="fragment_composition_drink"
        tools:layout="@layout/fragment_composition_drink">
        <argument
            android:name="composition"
            app:argType="string" />
        <action
            android:id="@+id/action_compositionDrinkFragment_to_detailDrinkFragment"
            app:destination="@id/detailDrinkFragment" />
    </fragment>
</navigation>